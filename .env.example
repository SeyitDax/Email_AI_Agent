# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
ENVIRONMENT=development
APP_NAME="Email AI Agent"
APP_VERSION="1.0.0"

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=500

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/email_ai_agent
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Service Configuration (Gmail API)
GMAIL_CREDENTIALS_PATH=credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=credentials/gmail_token.json
EMAIL_CHECK_INTERVAL=60

# Queue Configuration
TASK_QUEUE_NAME=email_processing
MAX_RETRIES=3
RETRY_DELAY=5

# Classification Thresholds
CONFIDENCE_THRESHOLD_SEND=0.85
CONFIDENCE_THRESHOLD_REVIEW=0.65
ESCALATION_THRESHOLD=0.50

# Performance Settings
MAX_EMAILS_PER_BATCH=50
PROCESSING_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/email_agent.log

# Security Settings
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
API_KEY_HEADER=X-API-Key

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# External Services
SENTRY_DSN=your_sentry_dsn_here

# Development Settings
RELOAD=true
ACCESS_LOG=true